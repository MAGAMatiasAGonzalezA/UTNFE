        <div class="col-3 text-right">
            <form class="d-flex" role="search" action="/admin/novedades" method="get">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" arial-label="Search" name="q"
                    {{#if q}}value="{{q}}" {{/if}}>
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">
                    <i class="fa fa-serch"></i>
                </button>
            </form>
        </div>

    </div>
    {{!-- fin fila 2 --}}

    {{!-- INICIO fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-sm btn-secondary">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar"
                                class="btn btn-sm btn-secondary">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if id_search}}
                {{#unless novedades.length}}
                    No se encontraron resultados para "<strong>{{q}}</strong>"
                {{/unless}}
            {{/if}}
        </div>
    </div>
</div>
{{!-- fin fila 3 --}}