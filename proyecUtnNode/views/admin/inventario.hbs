<div class="container" style="margin-top: 100px;">
    {{!-- fila 1 --}}
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{usuario}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n
                    <i class="fa fa-sign-out-alt"></i>
                </a>
            </p>
        </div>
    </div>
     {{!-- fin fila 1 --}}
     {{!-- INICIO fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de materiales</h3>
        </div>
        <div class="col-2 text-right">
            <a href="#" class="btn btn-success"> <i class="fa fa-plus">
                </i>Nuevo</a>
        </div>
    </div>
    {{!-- fin fila 2 --}}
    {{!-- INICIO fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col" class="text-center">Usuario</th>
                        <th scope="col" class="text-center">Item</th>
                        <th scope="col" class="text-center">Cantidad</th>
                        <th scope="col" class="text-center">Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each inventario}}
                    <tr>
                        <th scope="row">{{inventario_id}}</th>
                        <td>{{usuario}}</td>
                        <td>{{item_nombre}}</td>
                        <td>{{cantidad}}</td>
                        <td>{{fecha}}</td>
                        <td class="text-center">
                            <a href="#" title="Editar" class="btn btn-sm btn-secondary">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="/admin/recetario/inventario/eliminar/{{inventario_id}}" title="Eliminar"
                                class="btn btn-sm btn-secondary">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!-- FIN fila 3 --}}
</div>